@import './variables'

.skin-pop-up
  position fixed
  left 15vw
  top 10vh
  width 70vw
  background-color white
  min-height 20px
  animation-fill-mode forwards
  box-shadow 0 12px 15px 0 rgba(0, 0, 0, 0.24)
  &__image-wrapper
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    .loader
      position absolute
      top -9px
      left -9px
      width: 102px
  &__champion-image
    border 3px solid $accent
    border-radius 50%
    box-sizing border-box
    width 84px
    height 84px
      
